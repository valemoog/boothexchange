<div class="page-header">
  <h3>Conversation #<%= @conversation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd><%= @conversation.sender_id %></dd>

      <dt>Receiver</dt>
      <dd><%= @conversation.receiver_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/conversations" class="btn btn-primary">
        Back
      </a>
      <a href="/conversations/<%= @conversation.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_conversation/<%= @conversation.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
