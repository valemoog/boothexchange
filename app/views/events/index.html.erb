<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-md btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Picture</th>
        <th>Name</th>
        <th>Actions</th>

      </tr>

      <% @events.each do |event| %>
      <tr>
        <td>  <img src="<%= event.image_url %>" class ="img-responsive" width = "200"></td>
        <td><%= event.name %></td>

        <td>
          <p>
          <a href="/events/<%= event.id %>" class="btn btn-default btn-md form-control ">Show</a>
        </p>
        <p>
          <a href="/events/<%= event.id %>/edit" class="btn btn-primary btn-md form-control ">Edit</a>
        </p>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
