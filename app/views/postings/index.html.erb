<div class="page-header">
  <h1>
    Postings
    <a href="/postings/new" class="btn btn-lg btn-success">New Posting</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Event</th>
        <th>Location</th>
        <th>Date</th>
        <th>Time</th>
        <th>Price</th>
      </tr>

      <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.name %></td>
        <td><%= posting.event.name %></td>
        <td><%= posting.location.name %></td>
        <td><%= posting.date %></td>
        <td><%= posting.time %></td>
        <td><%= posting.price %></td>
    
        <td>
          <a href="/postings/<%= posting.id %>" class="btn btn-primary">Show</a>
          <a href="/postings/<%= posting.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_posting/<%= posting.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
