<div class="page-header">
  <h1>
    All Tickets for Sale

  </h1>

  <a href="/postings/new" class="btn btn-md btn-success">Sell a ticket online!</a>

  </div>






<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>
        <th>Event</th>
        <th>Location</th>
        <th>Date</th>
        <th>Time</th>
        <th>Price</th>
      </tr>

      <% @postings.each do |posting| %>
      <tr>
        <td>
        <a href="/postings/<%= posting.id %>" ><%= posting.name %></a>
        </td>
        <td><%= posting.event.name %></td>
        <td><%= posting.location.name %></td>
        <td><%= posting.date %></td>
        <td><%= posting.time %></td>
        <td><%= posting.price %></td>



      </tr>
      <% end %>
    </table>
  </div>
</div>
