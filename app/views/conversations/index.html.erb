<div class="page-header">
  <h1>
    Conversations
    <a href="/conversations/new" class="btn btn-lg btn-success">Conversation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Actions</th>
      </tr>

      <% @conversations.each do |conversation| %>
      <tr>
        <td><%= conversation.sender_id %></td>
        <td>
          <a href="/conversations/<%= conversation.id %>" class="btn btn-primary">Show</a>
          <a href="/conversations/<%= conversation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_conversation/<%= conversation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
