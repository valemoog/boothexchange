<div class="page-header">
  <h3>All postings available for: <%= @event.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Seller</th>
          <th>Price</th>

        </tr>
      <% @event.postings.each do |posting| %>
      <tr>

<td> <a href="/posting/<%= posting.id %>"><%= posting.name %></a> </td>

        <td><%= posting.user.username%></td>
        <td><%= posting.price%></td>

      </tr>
      <% end %>
</table>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/events" class="btn btn-primary">
        Back
      </a>

    </div>
  </div>
</div>
